{# table.tmdl.j2 - dispatcher that routes to per-kind templates #}
{% set kind = table.kind %}

{# Route to kind-specific template #}
{% if kind == 'table' %}
  {% include 'tables/table.table.j2' %}
{% elif kind == 'measureTable' %}
  {% include 'tables/table.measureTable.j2' %}
{% elif kind == 'calculatedTable' %}
  {% include 'tables/table.calculatedTable.j2' %}
{% elif kind == 'fieldParameter' %}
  {% include 'tables/table.fieldParameter.j2' %}
{% elif kind == 'calculationGroup' %}
  {% include 'tables/table.calculationGroup.j2' %}
{% else %}
  {# Fallback for unknown table kind #}
  {% include 'tables/table.table.j2' %}
{% endif %}